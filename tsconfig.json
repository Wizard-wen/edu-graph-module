{
  "compilerOptions": {
    "strict": true,
    "target": "ES2017",
    "lib": ["es2017", "es7", "es6", "es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "types"],
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules/*"]
}
